#!/bin/bash

cd $1

set -eo pipefail

# make the Go buildpack skip virtualenv, hg, and bzr
mkdir -p /tmp/fake
PATH=$PATH:/tmp/fake
touch /tmp/fake/hg
chmod +x /tmp/fake/hg
touch /tmp/fake/bzr
chmod +x /tmp/fake/bzr

url=https://raw.github.com/kr/heroku-buildpack-go/master/bin/compile
curl -s $url|bash /dev/stdin "$@"

file=go1.0.3.$(uname|tr A-Z a-z)-amd64.tar.gz
url=http://go.googlecode.com/files/$file
curl -sO $url
tar zxf $file
rm -f $file

cat <<'end' >.profile.d/runtime-go.sh
GOROOT=$HOME/go export GOROOT
PATH=$GOROOT/bin:$PATH
end
